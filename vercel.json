{
  "builds": [
    {
      "src": "composer.json",
      "use": "@vercel/php"
    }
  ],
  "env": {
    "APP_ENV": "production",
    "DB_HOST": "@database_host",
    "DB_DATABASE": "@database_name",
    "DB_USERNAME": "@database_username",
    "DB_PASSWORD": "@database_password"
  },
  "rewrites": [
    { "source": "/integradors", "destination": "/integradors/index" },
    { "source": "/integradors/create", "destination": "/integradors/create" },
    { "source": "/integradors/store", "destination": "/integradors/store" },
    { "source": "/integradors/:integrador", "destination": "/integradors/show" },
    { "source": "/integradors/:integrador/edit", "destination": "/integradors/edit" },
    { "source": "/integradors/:integrador/update", "destination": "/integradors/update" },
    { "source": "/integradors/:integrador/destroy", "destination": "/integradors/destroy" },
    { "source": "/(.*)", "destination": "/index.php" }
  ]
}
